# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Domains.list(p:Int ?= 0, s:Int ?= 2)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)



#################### API ###########################
# Application API Routes, Route API requests as json
####################################################

# Accounts
GET     /api/accounts/:id               controllers.Accounts.get(id: Int)

# Records
GET     /api/records                    controllers.Records.listAll
POST    /api/records                    controllers.Records.create
PUT     /api/records                    controllers.Records.updateAll

GET     /api/records/:id                controllers.Records.get(id: Int)
PUT     /api/records/:id                controllers.Records.updateIfExists(id: Int)
DELETE  /api/records/:id                controllers.Records.deleteOne(id: Int)

# Domains
GET     /api/domains                    controllers.Domains.listAll
POST    /api/domains                    controllers.Domains.create
PUT     /api/domains                    controllers.Domains.updateAll

GET     /api/domains/:id                controllers.Domains.get(id: Int)
PUT     /api/domains/:id                controllers.Domains.updateIfExists(id: Int)
DELETE  /api/domains/:id                controllers.Domains.deleteOne(id: Int)

# Zones
GET     /api/zones                      controllers.Zones.listAll
POST    /api/zones                      controllers.Zones.create
PUT     /api/zones                      controllers.Zones.updateAll
DELETE  /api/zones                      controllers.Zones.deleteAll

GET     /api/zones/:id                  controllers.Zones.get(id: Int)
PUT     /api/zones/:id                  controllers.Zones.updateIfExists(id: Int)
DELETE  /api/zones/:id                  controllers.Zones.deleteOne(id: Int)

# Supermasters
GET     /api/supermasters               controllers.Supermasters.listAll
POST    /api/supermasters               controllers.Supermasters.create
PUT     /api/supermasters               controllers.Supermasters.updateAll
DELETE  /api/supermasters               controllers.Supermasters.deleteAll

GET     /api/supermasters/:id           controllers.Supermasters.get(id: Int)
PUT     /api/supermasters/:id           controllers.Supermasters.updateIfExists(id: Int)
DELETE  /api/supermasters/:id           controllers.Supermasters.deleteOne(id: Int)


################### DEMO ###############################
# Demo pages for testing purposes
########################################################

# Authentication
GET     /login                          controllers.Authentication.login
POST    /login                          controllers.Authentication.authenticate
GET     /logout                         controllers.Authentication.logout

GET     /records                        controllers.Records.index
GET     /domains                        controllers.Domains.index
GET     /supermasters                   controllers.Supermasters.index
GET     /records/index                  controllers.Records.index

GET     /records/list                   controllers.Records.list(p: Int ?= 0, s: Int ?= 1)
GET     /records/show/:id               controllers.Records.show(id: Int)
GET     /records/create/domain/:id      controllers.Records.newRecord(id: Int)
GET     /records/create/account/:id     controllers.Records.newRecord(id: Int)
GET     /records/list/domain/:id        controllers.Records.listByDomainId(id: Int, p:Int ?= 0, s:Int ?= 1)
GET     /records/edit/:id               controllers.Records.edit(id: Int)

GET     /domains/list                   controllers.Domains.list(p:Int ?= 0, s:Int ?= 2)
GET     /domains/list/:id               controllers.Domains.show(id: Int)
GET     /domains/show/:id               controllers.Domains.show(id: Int)
GET     /domains/create                 controllers.Domains.newDomain()
GET     /domains/index                  controllers.Domains.index

GET     /accounts                       controllers.Records.listAllAccountIds
GET     /accounts/list                  controllers.Records.listAllAccountIds
GET     /accounts/show/:id              controllers.Accounts.show(id: Int)

GET     /accounts/migrate               controllers.BulkOperations.migrate

GET     /servers/list                   controllers.Servers.list(p: Int ?= 0, s: Int ?= 1)